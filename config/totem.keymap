            bindings = <
           &kp EXCL  &kp AT  &kp HASH          &kp DLLR              &kp PRCNT         &kp CARET        &kp AMPS               &kp ASTERISK       &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
           &none     &none   &none             &none                 &kp UNDERSCORE    &kp PLUS         &none                  &none              &none                 &none
&kp TILDE  &none     &none   &kp LEFT_BRACKET  &kp LEFT_PARENTHESIS  &kp LEFT_BRACE    &kp RIGHT_BRACE  &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACKET  &none                 &none                  &kp PIPE
                             &trans            &trans                &trans            &trans           &trans                 &trans
            >;
        };

        fn-layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            label = "FN";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
